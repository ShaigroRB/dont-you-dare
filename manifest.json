{
    "name": "Don't you dare!",
    "version": "0.4.0",
    "description": "Ask for confirmation to close tabs using Ctrl+W.",
    "permissions": [
        "storage",
        "tabs",
        "http://*/",
        "https://*/"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "js/inject.js"
            ]
        }
    ],
    "manifest_version": 2
}